<h1>All Users</h1>
<%= link_to 'Create New User', new_admin_user_path %>
<br/><br/>
<table class="sofT" cellspacing="0">

  <tr>
    <td class="helpHed">Username</td>
    <td class="helpHed">Email</td>
    <td class="helpHed">Roles</td>
    <td class="helpHed">View User</td>
    <td class="helpHed">Edit User</td>
    <td class="helpHed">Delete User</td>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.roles.collect(&:name).to_sentence%></td>
      <td><%= link_to 'Show', admin_user_path(user) %></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Destroy', admin_user_path(user), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>


